<html class="no-js" lang="en-us">
<!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="@ViewBag.Description">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/manifest.json">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="theme-color" content="#ffffff">
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon" />
    <title>@ViewBag.Title - Matt Rhine</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab|Open+Sans:400italic,700italic,400,600,700" rel="stylesheet">
    @Styles.Render("~/bundles/css")
    @RenderSection("styles", required: false)
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <a href="~/"><img src="~/Content/Images/logo.svg" style="height: 70px;" alt="Logo: </>" /></a>
        <p>Matthew Rhine: <span>Developer working on, around, and outside the stack</span></p>
    </header>
    <nav>
        <ul>
            <li>@Html.ActionLink("Photography", "Index", "Photography")</li>
            <li>@Html.ActionLink("Music", "Index", "Music")</li>
            <li>@Html.ActionLink("Programming", "Index", "Programming")</li>
            @*<li>@Html.ActionLink("Thoughts", "Index", "Thoughts")</li>*@
        </ul>
    </nav>
    <main>
        @RenderBody()
    </main>
    <aside>@RenderSection("Sidebar", required: false)</aside>
    <footer>
        <div>
            <h2>The other places I maintain content</h2>
            <ul class="social-links">
                <li><a href="https://www.instagram.com/frontend.dogrammer/" target="_blank" rel="noopener" title="Instagram"><img src="~/Content/images/icons/instagram_mark_dark.svg" alt="Instagram" /></a></li>
                <li><a href="https://500px.com/mattrhine" target="_blank" rel="noopener" title="500px"><img src="~/Content/images/icons/500px_mark_dark.svg" alt="500px" /></a></li>
                <li><a href="https://twitter.com/Mathias787" target="_blank" rel="noopener" title="Twitter"><img src="~/Content/images/icons/twitter_mark_dark.svg" alt="Twitter" /></a></li>
                <li><a href="https://github.com/Mathias787" target="_blank" rel="noopener" title="Github"><img src="~/Content/images/icons/github_mark_dark.svg" alt="Github" /></a></li>
            </ul>
            <p>&copy; @DateTime.Now.Year - MattRhine.com</p>
        </div>
    </footer>

    @RenderSection("scripts", required: false)
</body>
</html>